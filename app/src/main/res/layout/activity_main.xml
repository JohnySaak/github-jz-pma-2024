<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 3D Printing Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E0F7FA"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3D Printing"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/printing_time_hours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Hours"
                    android:inputType="number"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/printing_time_minutes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Minutes"
                    android:inputType="number"
                    android:textColor="#000000"  />
            </LinearLayout>

            <EditText
                android:id="@+id/printing_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter weight (grams for SLS/FDM, mL for SLA)"
                android:inputType="numberDecimal"
                android:paddingTop="10dp"
                android:textColor="#000000"  />

            <!-- Horizontal Radio Buttons for SLS, SLA, FDM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <RadioGroup
                    android:id="@+id/printing_method_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_sls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SLS"
                    android:textColor="#000000"  />

                <RadioButton
                    android:id="@+id/rb_sla"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SLA"
                    android:textColor="#000000"  />

                <RadioButton
                    android:id="@+id/rb_fdm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FDM"
                    android:textColor="#000000"  />

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#BDBDBD" />

        <!-- CNC Sawing Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFEBEE"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CNC Sawing"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="10dp" />

            <EditText
                android:id="@+id/sawing_stitches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter number of stitches"
                android:inputType="number"
                android:textColor="#000000"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/cb_vlizelin_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vlizelin Top"
                    android:textColor="#000000"  />

                <CheckBox
                    android:id="@+id/cb_vlizelin_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vlizelin Bottom"
                    android:layout_marginStart="20dp"
                    android:textColor="#000000"  />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#BDBDBD" />

        <!-- Laser Cutting Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F1F8E9"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laser Cutting"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/laser_time_hours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Hours"
                    android:inputType="number"
                    android:textColor="#000000"  />

                <EditText
                    android:id="@+id/laser_time_minutes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Minutes"
                    android:inputType="number"
                    android:textColor="#000000"  />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="#BDBDBD" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/btn_calculate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculate Price"
                android:textColor="#000000"  />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Inputs"
                android:textColor="#000000"  />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Price will be displayed here"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>
</ScrollView>
